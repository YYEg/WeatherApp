<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/txtLogo"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/txtColor"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/userField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLogo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="100sp"
        android:backgroundTint="@color/teal_700"
        android:ems="10"
        android:hint="@string/hintUserField"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/txtColor"
        android:textColorHint="@color/txtColorHint" />
    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userField"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="130sp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/btnMainText"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/resultInfo"
        android:layout_below="@id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/txtColorHint"
        android:textSize="25sp" />

</RelativeLayout>